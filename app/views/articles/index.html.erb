<p id="notice"><%= notice %></p>
<div class="container text-dark">
  <div class="row">
  <div class="col-md-8">
  <h1>最新記事</h1>
  <h2>パソコンに関する記事</h2>
  <% @articles.each do |article| %>
  <div class="row row-1">
    <div class="col-md-6">
      <img class="img-fluid" src="<%= article.image %>"  alt="Responsive image">
      <%# <ul>
        <li><%= link_to 'Show', article </li>
        <li><%= link_to 'Edit', edit_article_path(article) </li>
        <li><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } </li>
      </ul> %>
    </div>
    <div class="col-md-6">
      <h3><%= link_to article.title, article %></h3>
      <p><%= article.preview %></p>
    </div>
  </div>
  <% end %>
  <%# <%= link_to 'New Article', new_article_path%>
  </div>
  <div class="col-md-4">
    <h2>記事一覧</h2>
    <% @articles.each do |article| %>
    <div class="row row-1">
      <div class="col-md-4">
        <img class="img-fluid" src="<%= article.image %>"  alt="Responsive image">
      </div>
      <div class="col-md-8">
        <p class="article-text-overflow"><strong><%= link_to article.title, article %></strong><br><%= article.preview %></p>
      </div>

    </div>
    <% end %>
  </div>
  </div>
</div>

<!-- ↓body閉じタグ直前でjQueryを読み込む -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<!-- ↓ページが読み込まれたと同時にモーダルエリアを起動する -->
<script type="text/javascript">
  window.onload = function(){
      var container = $('.container').offset().top;
        $('html, body').animate({ scrollTop: container }, 1000, 'swing');
  }
</script>
