<p id="notice"><%= notice %></p>
<div class="container text-dark">
  <div class="row">
    <div class="col-md-8">
    <h1><%= @article.title %></h1>
    <img class="img-fluid" src="<%= @article.image %>" alt="Responsive image">
    <%# <%= image_tag article.image %>
    <%= sanitize @article.content , tags: %w(h1 h2 h3 h4 h5 h6 ul ol li p a img table tr td em br strong div iframe), attributes:  %w(id class href src style width height) %>
    <%# <%= link_to 'Edit', edit_article_path(@article)  |
    <%= link_to 'Back', articles_path %>
    </div>
    <div class="col-md-4">
      <h2>最新の記事</h2>
      <% @articles.each do |article| %>
      <div class="row row-1">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= article.image %> "  alt="Responsive image">
        </div>
        <div class="col-md-8">
          <p class="article-text-overflow"><strong><%= link_to article.title, article %></strong><br><%= article.preview %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- ↓body閉じタグ直前でjQueryを読み込む -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<!-- ↓ページが読み込まれたと同時にモーダルエリアを起動する -->
<script type="text/javascript">
  window.onload = function(){
      var container = $('.container').offset().top;
        $('html, body').animate({ scrollTop: container }, 1000, 'swing');
  }
</script>
